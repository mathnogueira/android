<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pink.dcc.ufla.br.wiplayer.fragments.GroupsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="302dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/name_groups"
                android:textSize="20sp" />

            <ListView
                android:id="@+id/device_group_list"
                android:layout_width="match_parent"
                android:layout_height="259dp">

            </ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/volume_down"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_volume_down_black_24dp"/>

                <ImageButton
                    android:id="@+id/volume_mute"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_volume_off_black_24dp"  />

                <ImageButton
                    android:id="@+id/volume_up"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_volume_up_black_18dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.39">

            <Button
                android:id="@+id/btn_new_group"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/colorPlayingMusic"
                android:text="@string/new_group"
                android:textColor="@color/colorWhite" />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>
